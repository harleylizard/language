package com.example

// Inheritance
interface Entity {
    burnTime: float

    function tick(world: World)

    function burn(time: float) {
        burnTime = time
    }
}

// Composition
trait Flammable : Entity {

    function burnInSun(world: World) {
        if (world.isDay()) {
            burn(1.0F)
        }
    }
}

trait Enemy : Entity {

    function despawn(world: World) {
        if (world.isPeaceful) {
            world.remove(this)
        }
    }
}

class Pig : Entity {

    override function tick(world: World) {
    }
}

class Zombie : Entity, Flammable, Enemy {

    override function tick(world: World) {
        burnInSun(world)
        despawn(world)
    }
}